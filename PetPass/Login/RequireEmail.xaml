<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.Login.RequireEmail"
             Title="RequireEmail">
    <VerticalStackLayout>
        <Label 
            Text="Para restaurar la contraseÃ±a de su cuenta por favor ingrese el correo de la misma."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout Margin="20" Orientation="Horizontal">
            <Label Text="Correo" HorizontalOptions="FillAndExpand"/>
            <Entry x:Name="EmailEntry" HorizontalOptions="FillAndExpand"  />
        </StackLayout>

        <StackLayout Orientation="Horizontal"  HorizontalOptions="CenterAndExpand" Margin="0,20,0,0">
            <Button x:Name="btnRecovery" Text="Restaurar" Clicked="btnRecovery_Clicked" HorizontalOptions="FillAndExpand"/>

        </StackLayout>

        <Grid BackgroundColor="Transparent" Opacity="0.5">
            <ActivityIndicator x:Name="loadingIndicator" IsRunning="False" IsVisible="False"
                               HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>