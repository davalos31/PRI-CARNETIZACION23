<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.RegisterPetIni"
             Title="RegisterPetIni">
    <VerticalStackLayout>
        <Label 
            Text="Registro de Mascotas"
            FontSize="24"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
            <Entry x:Name="EntryCi" Placeholder="NÃºmero" />
            <Button x:Name="btnSearch"
                    Text="Buscar" 
                    Clicked="Button_Clicked"/>
        </StackLayout>

        <Entry x:Name="Name" Placeholder="Nombre" />
        <Entry x:Name="FirstName" Placeholder="Apellido Paterno" />
        <Entry x:Name="LastName" Placeholder="Apellido Materno" />

        <Button x:Name="btnCreate"
                Text="Continuar"
                BackgroundColor="#007ACC"
                TextColor="White"
                VerticalOptions="EndAndExpand" 
                IsEnabled="False"
                Clicked="btnCreate_Clicked"/>

        <Grid BackgroundColor="Transparent" Opacity="0.5">
            <ActivityIndicator x:Name="loadingIndicator" IsRunning="False" IsVisible="False"
                               HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>