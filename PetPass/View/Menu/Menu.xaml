<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.View.Menu.Menu"
             BackgroundColor="White">

    <StackLayout>
        <Label Text="Welcome to .NET MAUI!"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand" />

        <Button Text="Mostrar Botones" Clicked="OnShowButtonsClicked" />

        <!-- Espacio para mostrar los botones adicionales -->
        <StackLayout x:Name="additionalButtonsStackLayout" IsVisible="false">
            <Button Text="Botón 1" Clicked="OnButton1Clicked" />
            <Button Text="Botón 2" Clicked="OnButton2Clicked" />
            <Button Text="Botón 3" Clicked="OnButton3Clicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>