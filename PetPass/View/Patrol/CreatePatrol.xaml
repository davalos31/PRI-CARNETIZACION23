<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.View.Patrol.CreatePatrol"
             Title="CreatePatrol">
    <VerticalStackLayout>
        <StackLayout>
            <!-- Otros campos de entrada aquí -->


            <ListView x:Name="listaZonas">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



            <!-- Campo de selección para Zone -->
            <Label Text="Seleccione la Zona:" />
            <Picker x:Name="ZonePicker">
                <!-- Aquí se llenará dinámicamente con opciones de la tabla Zone -->
            </Picker>

            <!-- Campo de selección para Campaign -->
            <Label Text="Seleccione la Campaña:" />
            <Picker x:Name="CampaignPicker">
                <!-- Aquí se llenará dinámicamente con opciones de la tabla Campaign -->
            </Picker>

            <Label Text="Fecha de Patrullaje:" />
            <DatePicker x:Name="DatePicker" />

            <Button Text="Guardar" Clicked="GuardarButton_Clicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>