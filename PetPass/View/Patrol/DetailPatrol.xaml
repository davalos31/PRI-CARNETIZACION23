<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.View.Patrol.DetailPatrol"
             Title="DetailPatrol">
    <VerticalStackLayout>
        <!-- Contenido de tu página aquí -->

        <ListView x:Name="PatrolListView" ItemsSource="{Binding patrolListView}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding PatrolDate}" />
                            <Label Text="{Binding Person.Name}" />
                            <Label Text="{Binding Zone.Name}" />
                            <Label Text="{Binding Campaign.Name}" />
                            <Button Text="Editar" Clicked="Edit" CommandParameter="{Binding PatrolId}"/>
                            <Button Text="Eliminar" Clicked="OnEditButtonClicked"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>