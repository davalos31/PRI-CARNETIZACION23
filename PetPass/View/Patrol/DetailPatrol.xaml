<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.View.Patrol.DetailPatrol"
             Title="DetailPatrol">
    <VerticalStackLayout>
        <ListView x:Name="zoneListView" ItemsSource="{Binding Patrols}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <!--<Label Text="{Binding patrolID}" />-->
                            <Label Text="{Binding patrolDate}"  />
                            <Label Text="{Binding Person.Name}" />
                            <!-- Accede a la propiedad Name de la clase Person -->
                            <Label Text="{Binding Zone.Name}" />
                            <!-- Accede a la propiedad Name de la clase Zone -->
                            <Label Text="{Binding Campaign.Name}" />
                            <!-- Accede a la propiedad CampaignName de la clase Campaign -->
                            <Button Text="Editar"  />
                            <Button Text="Eliminar"  Clicked="OnEditButtonClicked"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </VerticalStackLayout>
</ContentPage>