<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.View.Patrol.EditPatrol"
             Title="EditPatrol">
    <VerticalStackLayout>
        <StackLayout>
            <!-- Picker para seleccionar una zona -->
            <Picker x:Name="zonePicker" Title="Selecciona una zona" SelectedIndexChanged="OnZonePickerSelectedIndexChanged" />

            <!-- Picker para seleccionar una campaña -->
            <Picker x:Name="campaignPicker" Title="Selecciona una campaña" SelectedIndexChanged="OnCampaignPickerSelectedIndexChanged" />

            <!-- DatePicker para elegir la fecha de la patrulla -->
            <Label Text="Fecha de la Patrulla:" />
            <DatePicker x:Name="patrolDatePicker"  />

            <!-- Botón para agregar -->
            <Button Text="Editar"  />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>