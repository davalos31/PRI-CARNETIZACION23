<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.View.CreatePerson"
             Title="CreatePerson" BindingContext="{Binding PersonViewModel}"
             >
    <ScrollView>

        <VerticalStackLayout Spacing="10" Margin="20,20,20,0">

            <Label Text="Registro de Jefe Brigada" FontSize="Title" HorizontalOptions="Center" />

            <Label Text="Complete el siguiente formulario para dar de alta a un Jefe de Brigada." Margin="0,15,0,15" />

            <Grid>
                <!-- Definición de filas y columnas -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Etiquetas y entradas de datos -->
                <Label Text="Nombre:" WidthRequest="100" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,0,8" />
                <Entry Grid.Row="0" Grid.Column="1" BackgroundColor="White" HorizontalOptions="FillAndExpand" x:Name="NameEntry" Margin="0,10,0,10"  />

                <Label Text="Apellido Paterno:" Grid.Row="1" WidthRequest="100" HorizontalOptions="End" VerticalOptions="Center" Margin="0,8,0,8" />
                <Entry Grid.Row="1" Grid.Column="1" BackgroundColor="White" HorizontalOptions="FillAndExpand" x:Name="FirtsEntry" Margin="0,10,0,10"  />

                <Label Text="Apellido Materno:" Grid.Row="2" WidthRequest="100" HorizontalOptions="End" VerticalOptions="Center" Margin="0,8,0,8" />
                <Entry Grid.Row="2" Grid.Column="1" HorizontalOptions="FillAndExpand" BackgroundColor="White"  x:Name="LastNameEntry" Margin="0,10,0,10" />

                <Label Text="CI:" Grid.Row="3" WidthRequest="100" HorizontalOptions="End" VerticalOptions="Center" Margin="0,8,0,8" />
                <Entry Grid.Row="3" Grid.Column="1" HorizontalOptions="FillAndExpand" BackgroundColor="White" x:Name="CIEntry" Margin="0,10,0,10" />

                <Label Text="Sexo:" Grid.Row="4" WidthRequest="100" HorizontalOptions="End" VerticalOptions="Center" Margin="0,8,0,8" />
                <Picker Grid.Row="4" Grid.Column="1" HorizontalOptions="FillAndExpand" BackgroundColor="White" x:Name="GenderPicker" Margin="0,10,0,10">
                    <Picker.Items>
                        <x:String>M</x:String>
                        <x:String>F</x:String>
                    </Picker.Items>
                </Picker>

                <Label Text="Celular:" Grid.Row="5" WidthRequest="100" HorizontalOptions="End" VerticalOptions="Center" Margin="0,8,0,8" />
                <Entry Grid.Row="5" Grid.Column="1" HorizontalOptions="FillAndExpand" BackgroundColor="White" x:Name="PhoneEntry" Margin="0,10,0,10" />

                <Label Text="Email:" Grid.Row="6" WidthRequest="100" HorizontalOptions="End" VerticalOptions="Center" Margin="0,8,0,8" />
                <Entry Grid.Row="6" Grid.Column="1" HorizontalOptions="FillAndExpand" BackgroundColor="White" x:Name="EmailEntry" Margin="0,10,0,10"  />

                <Label Text="Dirección:" Grid.Row="7" WidthRequest="100" HorizontalOptions="End" VerticalOptions="Center" Margin="0,8,0,8" />
                <Entry Grid.Row="7" Grid.Column="1" HorizontalOptions="FillAndExpand" BackgroundColor="White" x:Name="AddressEntry" Margin="0,10,0,10" />
            </Grid>

            <Button x:Name="AssignPhotoButton" Text="Asignar Fotografía" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="FillAndExpand" Margin="0,10,0,0" Clicked="CamerButton_Clicked"/>
            <Button x:Name="SendButton" Text="Enviar" HorizontalOptions="FillAndExpand" Margin="0,10,0,0" Clicked="CreatePersonButton_Clicked" />

            <Label x:Name="ErrorLabel" Text="{Binding ErrorMessage}" TextColor="Red" />
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>