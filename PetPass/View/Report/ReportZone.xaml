<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPass.View.Report.ReportZone"
             Title="ReportZone">
    <StackLayout>
        <ActivityIndicator x:Name="loadingIndicator" IsRunning="True" IsVisible="True" />
        <ListView x:Name="patrolListView" IsVisible="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding ZoneName}" />
                            <Label Text="{Binding PeopleCount, StringFormat='People Count: {0}'}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>